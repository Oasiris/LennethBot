{
  "compilerOptions": {
    "outDir": "lib",

    "alwaysStrict": true,
    "experimentalDecorators": true,
    // "noImplicitAny": true,

    "lib": ["es2018"],
    "target": "es2018",
    "module": "commonjs",
    "resolveJsonModule": true
  },
  "compileOnSave": true,
  "strictNullChecks": true,
  "trailing-comma": true,
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules"]
}
